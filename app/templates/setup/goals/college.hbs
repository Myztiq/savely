<h2>College Education</h2>


{{#if hasAddedAChild}}
  <a href="#">Back to {{previousChildName}}'s college setup</a>
  <br/>
{{/if}}

<form>

  <div class="form-group">
    <label>Name</label>
    {{input type="text" placeholder="What is the name of your child?" value=name class="form-control"}}
  </div>
  {{#if name}}
    <div class="form-group">
      <label>How old is {{name}}</label>
      {{input type="number" placeholder="Age" value=age class="form-control"}}
    </div>
    <div class="form-group">
      <label>How much have you saved for {{name}}'s education?</label>


      <div class="radio">
        <label>
          {{radio-button value='0' checked=savedOption}}
          I haven’t saved anything for {{name}}
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='exactAmount' checked=savedOption}}
          I know the exact amount I have saved
        </label>
      </div>
      {{#if exactAmount}}
        {{currency-input class="form-control" placeholder="savings amount" unformatted=saved}}
      {{/if}}

      <div class="radio">
        <label>
          {{radio-button value='multipleKids' checked=savedOption}}
          I have multiple kids, and I don’t have my college savings broken out by each child.
          I know the total value for how much we’ve saved for all of our kids.
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='2000' checked=savedOption}}
          Less than $5,000
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='7500' checked=savedOption}}
          $5,000-$10,000
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='12500' checked=savedOption}}
          $10,000-$15,000
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='17500' checked=savedOption}}
          $15,000-$20,000
        </label>
      </div>
    </div>

    {{#if hasSaved}}
      <div class="form-group">
        <label>Where is the money being saved?</label>
        {{view Ember.Select
        content=controller.moneyLocations
        value=location
        optionValuePath="content.id"
        optionLabelPath="content.label"
        class="form-control"
        }}
      </div>
    {{/if}}


    <div class="form-group">
      <label>Are you thinking about sending them to a public or private school?</label>

      <div class="radio">
        <label>
          {{radio-button value='public' checked=schoolType}}
          Use the average cost of tuition at a public school
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='private' checked=schoolType}}
          Use the average cost of tuition at a private school
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button value='manual' checked=schoolType}}
          Enter a custom yearly cost of tuition (in 2014 dollars, we’ll adjust for inflation)
        </label>
      </div>
    </div>
  {{/if}}


  {{#if name}}
    <div class="form-group">
      <div class="btn btn-success" {{action 'save'}}>
        {{#if hasAddedAChild}}
          Continue...
        {{else}}
          Only plan for one child
        {{/if}}
      </div>
      <div class="btn btn-success" {{action 'addChild'}}>Add another child</div>
    </div>
  {{/if}}
</form>