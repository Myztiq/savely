<h2>{{label}}</h2>

<p>Let's get your college saving off to a good start.</p>

<form>
  <div class="form-group">
    <div class="btn btn-default" {{action 'addChild'}}>Add Child</div>
  </div>

  {{#each children}}
    <div class="form-group">
      <label>Name</label>
      {{input type="text" placeholder="Lucy" value=name class="form-control"}}
    </div>
    {{#if name}}
      <div class="form-group">
        <label>How old is {{name}}</label>
        {{input type="number" placeholder="4" value=age class="form-control"}}
      </div>
      <div class="form-group">
        <label>How much have you saved for {{name}}?</label>
        {{input type="number" placeholder="0" value=saved class="form-control"}}
      </div>

      {{#if hasSaved}}
        <div class="form-group">
          <label>Where is the money being saved?</label>
          {{view Ember.Select
            content=controller.moneyLocations
            value=location
            optionValuePath="content.id"
            optionLabelPath="content.label"
            class="form-control"
          }}
        </div>
      {{/if}}

    {{/if}}
  {{/each}}


  <div class="form-group">
    <div class="btn btn-success" {{action 'save'}}>Continue...</div>
  </div>
</form>